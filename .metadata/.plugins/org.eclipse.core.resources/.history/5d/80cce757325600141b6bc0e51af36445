		// TODO Auto-generated constructor stub
	}
	public BufferedImage encode(BufferedImage img) {
				return img;
	}
	
	private byte[][] preprocessing(BufferedImage img) {
		return null;
	}
	
	private byte[] convertToArray(BufferedImage img) {
		byte[] byteArray = ((DataBufferByte) img.getData().getDataBuffer()).getData();
		return byteArray;		
	}
	
