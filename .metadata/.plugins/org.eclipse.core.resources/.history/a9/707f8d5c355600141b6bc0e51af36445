package JpegEncoder;

import java.awt.image.BufferedImage;
import java.awt.image.DataBufferByte;

import DataObjects.Tile;

public abstract class AbstractJpegEncoder {
	int quality;

	public AbstractJpegEncoder(int quality_) {
		quality=quality_;
	}
	
	public BufferedImage encode(BufferedImage img) {
		Tile[][] tiles = preprocessing(img);
		transform(tiles);
		quantize(tiles);
		return img;
	}
	
	private void quantize(Tile[][] tiles) {
		// TODO Auto-generated method stub
		
	}

	private Tile[][] preprocessing(BufferedImage img) {
		return null;
	}
	
	
	protected abstract double[][][] transform(Tile[][] tiles);
	
	
	
	public void setQuality(int quality_) {
		quality = quality_;
	}
	
	public int getQuality() {
		return quality;	
	}
}
