package JpegEncoder;

import java.awt.image.BufferedImage;
import java.awt.image.DataBufferByte;

import DataObjects.Tile;

public abstract class AbstractJpegEncoder {
	int quality;

	public AbstractJpegEncoder(int quality_) {
		quality=quality_;
	}
	
	public BufferedImage encode(BufferedImage img) {
		
		return img;
	}
	
	private Tile[][] preprocessing(BufferedImage img) {
		return null;
	}
	
	private byte[] complementToSize(byte[] img, int tileX, int tileY) {
		return null;
	}
	
	protected abstract double[][][] transform(byte[][][] img);
	
	
	
	public void setQuality(int quality_) {
		quality = quality_;
	}
	
	public int getQuality() {
		return quality;	
	}
}
